<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity11"

    android:background="#FF9800">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:text="BOOK READING"
                android:textColor="@color/black"
                android:background="@drawable/roundedgewh"
                android:textSize="30dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:background="@drawable/roundedgewh"
                android:text="Historical Novels"
                android:textColor="#554D42"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <HorizontalScrollView
                android:id="@+id/horizontalScrollView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:verticalScrollbarPosition="right"
                android:layout_marginTop="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <GridLayout
                    android:id="@+id/g1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:columnCount="5"
                    android:rowCount="1"
                    android:useDefaultMargins="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView4">

                    <ImageButton
                        android:id="@+id/i1"
                        android:layout_width="120dp"
                        android:layout_height="170dp"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:scaleType="fitXY"
                        android:src="@drawable/the_name_of_rose" />
                    <ImageButton
                        android:id="@+id/i2"
                        android:layout_width="120dp"
                        android:layout_height="170dp"
                        android:layout_row="0"
                        android:layout_column="1"
                        android:scaleType="fitXY"
                        android:src="@drawable/the_book_of_ldgingsjpg"

                        />

                    <ImageButton
                        android:id="@+id/i3"
                        android:layout_width="120dp"
                        android:layout_height="170dp"
                        android:layout_row="0"
                        android:layout_column="2"
                        android:scaleType="fitXY"
                        android:src="@drawable/thewinterking" />

                    <ImageButton
                        android:id="@+id/i4"
                        android:layout_width="120dp"
                        android:layout_height="170dp"
                        android:layout_row="0"
                        android:layout_column="3"
                        android:scaleType="fitXY"
                        android:src="@drawable/theredtentjpg" />
                </GridLayout>
            </HorizontalScrollView>
            <TextView
                android:id="@+id/textView4"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_marginStart="15dp"
                android:background="@drawable/roundedgewh"
                android:layout_marginTop="22dp"
                android:gravity="center"
                android:text="Romantic Novels"
                android:textColor="#554D42"
                android:textSize="20dp"
                android:textStyle="bold"

                />
            <HorizontalScrollView
                android:id="@+id/horizontalScrollView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:verticalScrollbarPosition="right"
                android:layout_marginTop="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:columnCount="5"
                    android:rowCount="1"
                    android:useDefaultMargins="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView4">

                    <ImageButton
                        android:id="@+id/i9"
                        android:layout_width="120dp"
                        android:layout_height="164dp"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:scaleType="centerCrop"
                        android:src="@drawable/roomate" />


                    <ImageButton
                        android:id="@+id/i10"
                        android:layout_width="120dp"
                        android:layout_height="170dp"
                        android:layout_row="0"
                        android:layout_column="1"
                        android:scaleType="centerCrop"
                        android:src="@drawable/hola"
                        />

                    <ImageButton
                        android:id="@+id/i11"

                        android:layout_width="120dp"
                        android:layout_height="170dp"
                        android:layout_row="0"
                        android:layout_column="2"
                        android:scaleType="centerCrop"
                        android:src="@drawable/dating_dr_gil" />

                    <ImageButton
                        android:id="@+id/i12"

                        android:layout_width="120dp"
                        android:layout_height="170dp"
                        android:layout_row="0"
                        android:layout_column="3"
                        android:scaleType="centerCrop"
                        android:src="@drawable/lovedecep" />
                </GridLayout>

            </HorizontalScrollView>
            <TextView
                android:id="@+id/textView3"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:background="@drawable/roundedgewh"
                android:layout_marginStart="15dp"
                android:layout_marginTop="22dp"
                android:gravity="center"
                android:text="Fantasy Novels"
                android:textColor="#554D42"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView" />

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:verticalScrollbarPosition="right"
                android:layout_marginTop="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:columnCount="5"
                    android:rowCount="1"
                    android:useDefaultMargins="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView4">

                    <ImageButton
                        android:id="@+id/i5"
                        android:layout_width="120dp"
                        android:layout_height="170dp"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:scaleType="centerCrop"
                        android:src="@drawable/violeta" />


                    <ImageButton
                        android:id="@+id/i6"

                        android:layout_width="120dp"
                        android:layout_height="170dp"
                        android:layout_row="0"
                        android:layout_column="1"
                        android:scaleType="centerCrop"
                        android:src="@drawable/themagnolia"

                        />

                    <ImageButton
                        android:id="@+id/i7"
                        android:layout_width="120dp"
                        android:layout_height="170dp"
                        android:layout_row="0"
                        android:layout_column="2"
                        android:scaleType="centerCrop"
                        android:src="@drawable/run_rose_run" />

                    <ImageButton
                        android:id="@+id/i8"
                        android:layout_width="120dp"
                        android:layout_height="170dp"
                        android:layout_row="0"
                        android:layout_column="3"
                        android:scaleType="centerCrop"
                        android:src="@drawable/girlice" />
                </GridLayout>

            </HorizontalScrollView>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>